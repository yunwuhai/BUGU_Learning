#ifndef _GETTIMCNT_H_
#define _GETTIMCNT_H_

#define	HALF_US_TIM			TIM1
#define	HalfUsTimStart()	LL_TIM_SetCounter(HALF_US_TIM, 0); LL_TIM_EnableCounter(HALF_US_TIM)
#define	GetTick(time)		time = HALF_US_TIM->CNT
#define	HalfUsTimEnd()		LL_TIM_DisableCounter(HALF_US_TIM)

typedef uint32_t tim32_t;


#endif